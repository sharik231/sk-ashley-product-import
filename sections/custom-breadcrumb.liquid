<style>
  .breadcrumb {
    font-size: {{ section.settings.font_size }}px;
    font-weight: {{ section.settings.font_weight }};
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  
  .breadcrumb__link {
    position: relative;
    padding-bottom: 2px;
    color: {{ section.settings.link_color }};
    text-decoration: none !important;
    transition: all 0.3s ease;
  }
  
  .breadcrumb__link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: {{ section.settings.border_thickness }}px;
    background-color: {{ section.settings.border_color }};
    transition: all 0.3s ease;
  }
  
  .breadcrumb__link:hover {
    color: {{ section.settings.link_hover_color }} !important;
  }
  
  .breadcrumb__link:hover::after {
    opacity: 0;
    transform: translateY(2px);
  }
  
  .breadcrumb__divider {
    margin: 0 8px;
    color: {{ section.settings.divider_color }};
    font-size: {{ section.settings.divider_size }}px;
  }
  
  /* Remove focus outline rectangle */
  .breadcrumb__link:focus {
    outline: none;
  }
  
  /* Remove last divider if it exists */
  .breadcrumb__divider:last-child {
    display: none;
  }
  
  .page-title {
    display: block;
    line-height: 1.2;
  }
