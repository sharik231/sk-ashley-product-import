<style>
  /* Google Fonts imports */
  @import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700;800&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@200;300;400;600;700;900&display=swap');
</style>

{% if section.settings.show_breadcrumbs %}
<nav class="container breadcrumb" role="navigation" aria-label="breadcrumbs" style="padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0; font-family: {{ section.settings.breadcrumb_font_family }}, sans-serif;">
  <a href="/" class="breadcrumb__link" title="Home" style="color: {{ section.settings.link_color }};">Hogar</a>
  
  {% if template contains 'product' %}
    {% if collection %}
      <span class="breadcrumb__divider" aria-hidden="true">/</span>
      <a href="{{ collection.url }}" class="breadcrumb__link" title="{{ collection.title }}" style="color: {{ section.settings.link_color }};">{{ collection.title }}</a>
    {% endif %}
    <span class="breadcrumb__divider" aria-hidden="true">/</span>
    <a href="{{ product.url }}" class="breadcrumb__link" style="color: {{ section.settings.link_color }};">{{ product.title }}</a>
  
  {% elsif template contains 'collection' and collection.handle %}
    <span class="breadcrumb__divider" aria-hidden="true">/</span>
    {% if current_tags %}
      <a href="/collections/{{ collection.handle }}" class="breadcrumb__link" style="color: {{ section.settings.link_color }};">{{ collection.title }}</a>
      <span class="breadcrumb__divider" aria-hidden="true">/</span>
      <a href="/collections/{{ collection.handle }}/{{ current_tags | join: '+' }}" class="breadcrumb__link" style="color: {{ section.settings.link_color }};">{{ current_tags | join: " + " }}</a>
    {% else %}
      <a href="{{ collection.url }}" class="breadcrumb__link" style="color: {{ section.settings.link_color }};">{{ collection.title }}</a>
    {% endif %}
  
  {% elsif template == 'blog' %}
    <span class="breadcrumb__divider" aria-hidden="true">/</span>
    {% if current_tags %}
      <a href="{{ blog.url }}" class="breadcrumb__link" style="color: {{ section.settings.link_color }};">{{ blog.title }}</a>
      <span class="breadcrumb__divider" aria-hidden="true">/</span>
      <a href="{{ blog.url }}/tagged/{{ current_tags | join: '+' }}" class="breadcrumb__link" style="color: {{ section.settings.link_color }};">{{ current_tags | join: " + " }}</a>
    {% else %}
      <a href="{{ blog.url }}" class="breadcrumb__link" style="color: {{ section.settings.link_color }};">{{ blog.title }}</a>
    {% endif %}
  
  {% elsif template == 'article' %}
    <span class="breadcrumb__divider" aria-hidden="true">/</span>
    <a href="{{ blog.url }}" class="breadcrumb__link" style="color: {{ section.settings.link_color }};">{{ blog.title }}</a>
    <span class="breadcrumb__divider" aria-hidden="true">/</span>
    <a href="{{ article.url }}" class="breadcrumb__link" style="color: {{ section.settings.link_color }};">{{ article.title }}</a>
  
  {% elsif template contains 'page' %}
    <span class="breadcrumb__divider" aria-hidden="true">/</span>
    <a href="{{ page.url }}" class="breadcrumb__link" style="color: {{ section.settings.link_color }};">{{ page.title }}</a>
  {% endif %}
</nav>

  <div class="container">
{% if section.settings.show_page_title %}
<div class="page-title msp" style="
  color: {{ section.settings.title_color }};
  font-family: {{ section.settings.title_font_family }}, sans-serif;
  font-size: {{ section.settings.title_font_size }}px;
  font-weight: {{ section.settings.title_font_weight }};
  margin: {{ section.settings.title_margin_top }}px {{ section.settings.title_margin_right }}px {{ section.settings.title_margin_bottom }}px {{ section.settings.title_margin_left }}px;
  padding: {{ section.settings.title_padding_top }}px {{ section.settings.title_padding_right }}px {{ section.settings.title_padding_bottom }}px {{ section.settings.title_padding_left }}px;
">
  {% if template contains 'product' %}
    {{ product.title }}
  {% elsif template contains 'collection' and collection.handle %}
    {{ collection.title }}
  {% elsif template == 'blog' %}
    {{ blog.title }}
  {% elsif template == 'article' %}
    {{ article.title }}
  {% elsif template contains 'page' %}
    {{ page.title }}
  {% endif %}
</div>
