{% schema %}
{
  "name": "Furniture Design Block 2",
  "tag": "section",
  "class": "AboutAFI",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading (h4)",
      "default": "DEPARTMENT OVERVIEW"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading (h2)",
      "default": "Furniture Design"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Paragraph Text",
      "default": "Add your content here..."
    },
    {
      "type": "text",
      "id": "link_label",
      "label": "Link Text",
      "default": "Design Â»"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    }
  ],
  "presets": [
    {
      "name": "Furniture Design Section 2"
    }
  ]
}
{% endschema %}

<div class="container aboutS3AFI">
  <a href="{{ section.settings.link_url | default: '#' }}">
    <div class="container">
      <div class="theRit">
        {% if section.settings.background_image %}
          <img src="{{ section.settings.background_image | image_url: width: 1200 }}" alt="Furniture" class="background-image">
        {% endif %}
      </div>
      <div class="text-box">
        <div class="cardContentWrap">
          {% if section.settings.subheading != blank %}
            <h4>{{ section.settings.subheading }}</h4>
          {% endif %}
          {% if section.settings.heading != blank %}
            <h2>{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.text != blank %}
            <p>{{ section.settings.text }}</p>
          {% endif %}
          {% if section.settings.link_label != blank %}
            <a href="{{ section.settings.link_url | default: '#' }}">{{ section.settings.link_label }}</a>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>

