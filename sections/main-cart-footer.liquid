{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  class="gradient color-{{ section.settings.color_scheme }}{% if cart == empty %} is-empty{% endif %}"
  id="main-cart-footer"
  data-id="{{ section.id }}"
>
  <div class="page-width">
    <div class="cart__footer isolate section-{{ section.id }}-padding">
      {%- if settings.show_cart_note -%}
        <cart-note class="cart__note field">
          <label for="Cart-note">{{ 'sections.cart.note' | t }}</label>
          <textarea
            class="text-area field__input"
            name="note"
            form="cart"
            id="Cart-note"
            placeholder="{{ 'sections.cart.note' | t }}"
          >{{ cart.note }}</textarea>
        </cart-note>
      {%- endif -%}

      <div class="cart__blocks">
        {% for block in section.blocks %}
          {%- case block.type -%}
            {%- when '@app' -%}
              {% render block %}
            {%- when 'subtotal' -%}
              <div class="js-contents" {{ block.shopify_attributes }}>
                <div>
                  {%- if cart.cart_level_discount_applications.size > 0 -%}
                    <ul class="discounts list-unstyled" role="list" aria-label="{{ 'customer.order.discount' | t }}">
                      {%- for discount in cart.cart_level_discount_applications -%}
                        <li class="discounts__discount discounts__discount--position">
                          {{- 'icon-discount.svg' | inline_asset_content -}}
                          {{ discount.title | escape }}
                          (-{{ discount.total_allocated_amount | money }})
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
                </div>
            <div class="cart-summary">
            <h3>Cart Summary</h3>
              <p>Subtotal for {{ cart.item_count }} items <span>{{ cart.original_total_price | money }}</span></p>

  {% if cart.total_discount > 0 %}
    <p>Discount: <span>{{ cart.total_discount | money }}</span></p>
  {% endif %}



</div>
                <div class="totals">
                  <h2 class="totals__total">{{ 'sections.cart.estimated_total' | t }}</h2>
                  <p class="totals__total-value">{{ cart.total_price | money_with_currency }}</p>
                </div>

                <small class="tax-note caption-large rte">
                  {%- if cart.duties_included and cart.taxes_included -%}
                    {%- if shop.shipping_policy.body == blank -%}
                      {{ 'sections.cart.duties_and_taxes_included_shipping_at_checkout_without_policy' | t }}
                    {%- else -%}
                      {{
                        'sections.cart.duties_and_taxes_included_shipping_at_checkout_with_policy_html'
                        | t: link: shop.shipping_policy.url
                      }}
                    {%- endif -%}
                  {%- elsif cart.duties_included == false and cart.taxes_included -%}
                    {%- if shop.shipping_policy.body == blank -%}
                      {{ 'sections.cart.taxes_included_shipping_at_checkout_without_policy' | t }}
                    {%- else -%}
                      {{
                        'sections.cart.taxes_included_shipping_at_checkout_with_policy_html'
                        | t: link: shop.shipping_policy.url
                      }}
                    {%- endif -%}
                  {%- elsif cart.duties_included and cart.taxes_included == false -%}
                    {%- if shop.shipping_policy.body == blank -%}
                      {{ 'sections.cart.duties_included_taxes_at_checkout_shipping_at_checkout_without_policy' | t }}
                    {%- else -%}
                      {{
                        'sections.cart.duties_included_taxes_at_checkout_shipping_at_checkout_with_policy_html'
                        | t: link: shop.shipping_policy.url
                      }}
                    {%- endif -%}
                  {%- elsif cart.duties_included == false and cart.taxes_included == false -%}
                    {%- if shop.shipping_policy.body == blank -%}
                      {{ 'sections.cart.taxes_at_checkout_shipping_at_checkout_without_policy' | t }}
                    {%- else -%}
                      {{
                        'sections.cart.taxes_at_checkout_shipping_at_checkout_with_policy_html'
                        | t: link: shop.shipping_policy.url
                      }}
                    {%- endif -%}
                  {%- endif -%}
                </small>
              </div>
            {%- else -%}

              <div class="cart__ctas" {{ block.shopify_attributes }}>
                <button
                  type="submit"
                  id="checkout"
                  class="cart__checkout-button button"
                  name="checkout"
                  {% if cart == empty %}
                    disabled
                  {% endif %}
                  form="cart"
                >
                  {{ 'sections.cart.checkout' | t }}
                </button>
              </div>

              {%- if additional_checkout_buttons -%}
                <div class="cart__dynamic-checkout-buttons additional-checkout-buttons">
                  {{ content_for_additional_checkout_buttons }}
                </div>
              {%- endif -%}
          {%- endcase -%}
        {% endfor %}
        
<div id="protection-plan-wrapper" style="margin-top: 30px; padding: 20px; border: 1px solid #ccc;">
  <h4>Add a Protection Plan</h4>
  <p id="plan-message">Checking cart value...</p>
  <button id="add-protection-plan" style="display:none;" class="button">Add Protection Plan</button>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const planHandles = [
      "protection-plan-tier-1",
      "protection-plan-tier-2",
      "protection-plan-tier-3",
      "protection-plan-tier-4"
    ];

    function updateProtectionPlan() {
      fetch('/cart.js')
        .then(response => response.json())
        .then(cart => {
          let total = 0;
          let existingPlanItem = null;

          // Check for existing protection plan
          cart.items.forEach(item => {
            if (planHandles.includes(item.handle)) {
              existingPlanItem = item;
            } else {
              total += item.original_price * item.quantity;
            }
          });

          let newPlanHandle = null;
          if (total >= 100000 && total < 200000) {
            newPlanHandle = "protection-plan-tier-1";
          } else if (total >= 200000 && total < 300000) {
            newPlanHandle = "protection-plan-tier-2";
          } else if (total >= 300000 && total < 400000) {
            newPlanHandle = "protection-plan-tier-3";
          } else if (total >= 400000) {
            newPlanHandle = "protection-plan-tier-4";
          }

          const message = document.getElementById('plan-message');
          const button = document.getElementById('add-protection-plan');

          if (!message || !button) return;

          // If a plan is already added and it's not the correct one â€” remove it
          if (existingPlanItem && existingPlanItem.handle !== newPlanHandle) {
            fetch('/cart/change.js', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                id: existingPlanItem.key,
                quantity: 0
              })
            }).then(() => {
              updateProtectionPlan(); // Recursively update after removal
            });
            return;
          }

          if (newPlanHandle) {
            if (existingPlanItem) {
              message.textContent = `Protection plan (${existingPlanItem.title}) is applied.`;
              button.style.display = 'none';
            } else {
              // Show add option
              message.textContent = `Your cart qualifies for a protection plan.`;
              button.style.display = 'inline-block';
              button.onclick = () => {
                fetch(`/products/${newPlanHandle}.js`)
                  .then(res => res.json())
                  .then(product => {
                    const variantId = product.variants[0].id;
                    fetch('/cart/add.js', {
                      method: 'POST',
                      headers: { 'Content-Type': 'application/json' },
                      body: JSON.stringify({ id: variantId, quantity: 1 })
                    }).then(() => window.location.href = '/cart');
                  });
              };
            }
          } else {
            message.textContent = "Cart total must be above RM1000 to qualify.";
            button.style.display = 'none';
            if (existingPlanItem) {
              // Remove protection plan if cart dropped below threshold
              fetch('/cart/change.js', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                  id: existingPlanItem.key,
                  quantity: 0
                })
              }).then(() => window.location.href = '/cart');
            }
          }
        });
    }

    // Run once on page load
    updateProtectionPlan();

    // Observe changes in cart DOM (for quantity updates via +/- buttons or inputs)
    const cartWrapper = document.querySelector('#main-cart-footer');
    if (cartWrapper) {
      const observer = new MutationObserver(() => {
        // Delay to allow cart to process quantity change
        setTimeout(updateProtectionPlan, 500);
      });
      observer.observe(cartWrapper, { childList: true, subtree: true });
    }

   
  });
</script>

        <div id="cart-errors"></div>
      </div>
    </div>
  </div>
</div>

