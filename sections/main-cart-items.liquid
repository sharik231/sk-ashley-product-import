<script>
  function validateSalesperson() {
    var selectedSalesperson = document.getElementById('please-select-a-sales-person').value;
    if (!selectedSalesperson) {
      document.getElementById('salesperson-error').style.display = 'block';
      return false;
    } else {
      document.getElementById('salesperson-error').style.display = 'none';
      return true;
    }
  }

  function validateAndToggleCheckout() {
    var selectedSalesperson = document.getElementById('please-select-a-sales-person').value;
    var checkoutButton = document.getElementById('checkout');

    if (!selectedSalesperson) {
      checkoutButton.disabled = true;
      checkoutButton.onclick = function() {
        document.getElementById('salesperson-error').style.display = 'block';
        return false;
      };
    } else {
      checkoutButton.disabled = false;
      checkoutButton.onclick = function() {
        return validateSalesperson();
      };
    }
  }

  function updateSalesperson() {
    var selectedValue = document.getElementById('please-select-a-sales-person').value;

    if (!selectedValue) {
      document.getElementById('salesperson-error').style.display = 'block';
      return;
    } else {
      document.getElementById('salesperson-error').style.display = 'none';
    }

    var xhr = new XMLHttpRequest();
    xhr.open('POST', '/cart/update.js', true);
    xhr.setRequestHeader('Content-Type', 'application/json');
    xhr.onreadystatechange = function() {
      if (xhr.readyState === 4 && xhr.status === 200) {
        document.getElementById('salesperson-updated').style.display = 'block';
        setTimeout(function() {
          document.getElementById('salesperson-updated').style.display = 'none';
        }, 3000);

        validateAndToggleCheckout();
        
        if (selectedValue.includes(' - ')) {
          var parts = selectedValue.split(' - ');
          var showroom = parts[0];
          var salesperson = parts[1];
          
          var updateXhr = new XMLHttpRequest();
          updateXhr.open('POST', '/cart/update.js', true);
          updateXhr.setRequestHeader('Content-Type', 'application/json');
          updateXhr.send(JSON.stringify({
            "attributes": {
              "selected-showroom": showroom,
              "selected-salesperson": salesperson
            }
          }));
        }
      }
    };

    var data = JSON.stringify({
      "attributes": {
        "please-select-a-sales-person": selectedValue
      }
    });

    xhr.send(data);
  }

  document.addEventListener('DOMContentLoaded', function() {
    var checkoutButton = document.getElementById('checkout');
    if (checkoutButton) {
      checkoutButton.disabled = true;
    }
    
    var selectedValue = '{{ cart.attributes["please-select-a-sales-person"] }}';
    if (selectedValue) {
      document.getElementById('please-select-a-sales-person').value = selectedValue;
    }
    
    validateAndToggleCheckout();
  });

  document.getElementById('please-select-a-sales-person').addEventListener('change', function() {
    validateAndToggleCheckout();
  });
</script>
